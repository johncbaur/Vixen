<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						  xmlns:controls="clr-namespace:VixenModules.Editor.EffectEditor.Controls">
                    

	<Style TargetType="{x:Type controls:EmitterFramesPerColorSliderEditor}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type controls:EmitterFramesPerColorSliderEditor}">
					<StackPanel>
						<Slider x:Name="PART_editor6c"
								Delay="300"
								Interval="500"
								Value="{Binding Path=EmitterValue.FramesPerColor, RelativeSource={RelativeSource AncestorType=controls:EmitterFramesPerColorSliderEditor}, Delay=300, Mode=TwoWay}"
								Minimum="1"
								Maximum="60"
								TickFrequency="1"								
								SmallChange="1"
								LargeChange="5"
								AutoToolTipPlacement="BottomRight"
								IsDirectionReversed="False"								
								IsSnapToTickEnabled="True"
								IsEnabled="true" 
								ToolTip="{Binding Path=EmitterValue.FramesPerColor, RelativeSource={RelativeSource AncestorType=controls:EmitterFramesPerColorSliderEditor}, Mode=OneWay}"															
							   />
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>