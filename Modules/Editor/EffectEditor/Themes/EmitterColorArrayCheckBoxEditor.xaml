<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:VixenModules.Editor.EffectEditor.Controls">

	<Style TargetType="{x:Type controls:EmitterColorArrayCheckBoxEditor}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type controls:EmitterColorArrayCheckBoxEditor}">
					<StackPanel>
						<CheckBox  
							IsChecked="{Binding Path=EmitterValue.UseColorArray, RelativeSource={RelativeSource AncestorType=controls:EmitterColorArrayCheckBoxEditor}, Mode=TwoWay}">
						</CheckBox>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>